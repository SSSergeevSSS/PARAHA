<Page x:Class="Administration.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Administration.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="5" Height="40" Width="200" FontSize="20" Click="PopulationBtn_Click">Население</Button>
            <Button Margin="5" Height="40" Width="200" FontSize="20" Click="StaffBtn_Click">Сотрудники</Button>
            <Button Margin="5" Height="40" Width="200" FontSize="20" Click="ApplicationsBtn_Click">Заявки</Button>
            <Button Margin="5" Height="40" Width="200" FontSize="20" Click="AdministrationBtn_Click">Администрация</Button>
        </StackPanel>
        <Frame NavigationUIVisibility="Hidden" Name="MenuFrame" ContentRendered="MenuFrame_ContentRendered" Navigated="MenuFrame_Navigated"></Frame>
    </Grid>
</Page>
